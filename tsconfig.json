{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,

        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react-jsx",
        "skipLibCheck": true
    }
}